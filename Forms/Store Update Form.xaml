        <TextBox x:Name="AddUnits" HorizontalAlignment="Left" Margin="372,251,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="208"/>

        <Button Content="Назад" HorizontalAlignment="Left" Margin="49,30,0,0" VerticalAlignment="Top" Height="29" Width="160"/>
        <Button Content="Сохранить" HorizontalAlignment="Left" Margin="610,387,0,0" VerticalAlignment="Top" Height="53" Width="163"/>

    </Grid>
</Page>
