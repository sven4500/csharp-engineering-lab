<Window x:Class="CoffeeShop.MainManager"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CoffeeShop"
      Height="450" Width="800">
    <Grid>
        <!-- Сюда можно добавлять дополнительные вкладки. -->
        <TabControl Name="Pages" Margin="10">
            <!-- https://social.msdn.microsoft.com/Forums/en-US/be750167-a49d-4346-891e-7d1c67aa34ae/sizing-pagexaml-to-fit-inside-the-frame?forum=wpf -->
            <TabItem Header="Склад">
                <Frame Source="../ManagerStore/ManagerStore.xaml"/>
            </TabItem>
            <TabItem Header="Персонал">
                <Frame Source="../ManagerStaff/ManagerStaff.xaml"/>
            </TabItem>
            <TabItem Header="Заказы">
                <Frame Source="../ManagerOrders/ManagerOrders.xaml"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
