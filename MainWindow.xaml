<Window x:Class="Lab3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <!-- RowDefinition задаёт пропорции строк. "x*" указывает процентное соотношение после изменения размера.
        Аттрибут MinHeight задаёт минимальный размер строки. -->
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="10*" MinHeight="40"></RowDefinition>
            <RowDefinition Height="90*"></RowDefinition>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <TextBox Margin="10" TextWrapping="Wrap" Grid.Row="0"/>
        <Button Content="Удалить" Margin="0,10,10,10" Grid.Row="3" HorizontalAlignment="Right" Width="75"/>
        <Button Content="Изменить..." HorizontalAlignment="Right" Margin="0,10,90,10" Grid.Row="3" Width="75"/>
        <Button Content="Добавить..." Margin="0,10,170,10" Grid.Row="3" HorizontalAlignment="Right" Width="75"/>
        <CheckBox Content="Скоро день рождения" HorizontalAlignment="Left" Margin="10,10,0,15" Grid.Row="3" Width="143"/>
        <ListView Margin="10" Grid.Row="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Grid Name="AlphabeticGrid" Margin="10" Grid.Row="1"/>
    </Grid>
</Window>
